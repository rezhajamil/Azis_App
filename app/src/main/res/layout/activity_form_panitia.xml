<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/data_background"
    tools:context=".panitia.FormPanitiaActivity">

  <TextView
      android:id="@+id/textView7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:fontFamily="@font/montserrat"
      android:text="Formulir Panitia"
      android:textColor="@color/white"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:fillViewport="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/form_background">

      <EditText
          android:id="@+id/et_tahun"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:editable="false"
          android:ems="10"
          android:fontFamily="@font/montserrat"
          android:inputType="none"
          android:textColor="@color/sekunder"
          android:textColorHint="@color/sekunder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView8" />

      <EditText
          android:id="@+id/et_nama_kk_zakat"
          android:layout_width="350dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:capitalize="words"
          android:ems="10"
          android:fontFamily="@font/montserrat"
          android:inputType="textPersonName"
          android:textColor="@color/sekunder"
          android:textColorHint="@color/sekunder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView9" />

      <TextView
          android:id="@+id/textView8"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/montserrat"
          android:text="Tahun"
          android:textColor="@color/premier"
          android:textSize="18sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/et_alamat_mesjid" />

      <EditText
          android:id="@+id/et_harga_beras"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:ems="10"
          android:fontFamily="@font/montserrat"
          android:hint="11000,12000,12500"
          android:inputType="text"
          android:textColor="@color/sekunder"
          android:textColorHint="@android:color/tertiary_text_light"
          android:visibility="visible"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView3" />

      <EditText
          android:id="@+id/et_fidyah"
          android:layout_width="175dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:ems="10"
          android:fontFamily="@font/montserrat"
          android:inputType="number"
          android:textColor="@color/sekunder"
          android:textColorHint="@color/sekunder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView13" />

      <EditText
          android:id="@+id/et_mesjid"
          android:layout_width="350dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:capitalize="words"
          android:clickable="false"
          android:cursorVisible="false"
          android:editable="false"
          android:ems="10"
          android:focusable="false"
          android:fontFamily="@font/montserrat"
          android:gravity="start|top"
          android:inputType="none"
          android:textColor="@color/sekunder"
          android:textColorHint="@color/sekunder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_alamat" />

      <EditText
          android:id="@+id/et_alamat_mesjid"
          android:layout_width="350dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:capitalize="words"
          android:clickable="false"
          android:cursorVisible="false"
          android:editable="false"
          android:ems="10"
          android:focusable="false"
          android:fontFamily="@font/montserrat"
          android:gravity="start|top"
          android:inputType="none"
          android:textColor="@color/sekunder"
          android:textColorHint="@color/sekunder"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView6" />

      <Button
          android:id="@+id/btn_simpan"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="32dp"
          android:layout_marginBottom="32dp"
          android:text="Simpan"
          app:cornerRadius="50dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/et_fidyah" />

      <TextView
          android:id="@+id/textView9"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:layout_marginTop="32dp"
          android:fontFamily="@font/montserrat"
          android:text="Nama"
          android:textColor="@color/premier"
          android:textSize="18sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/tv_alamat"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/montserrat"
          android:text="Nama Mesjid"
          android:textColor="@color/premier"
          android:textSize="18sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/et_nama_kk_zakat" />

      <TextView
          android:id="@+id/textView6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/montserrat"
          android:text="Alamat Mesjid"
          android:textColor="@color/premier"
          android:textSize="18sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/et_mesjid" />

      <TextView
          android:id="@+id/tv_beras"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/montserrat"
          android:text="Daftar Harga Beras per Kg"
          android:textColor="@color/premier"
          android:textSize="18sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/et_tahun" />

      <TextView
          android:id="@+id/textView13"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:layout_marginTop="24dp"
          android:fontFamily="@font/montserrat"
          android:text="Fidyah per orang (Rp)"
          android:textColor="@color/premier"
          android:textSize="18sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/et_harga_beras" />

      <TextView
          android:id="@+id/textView3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginLeft="24dp"
          android:text="Pisahkan dengan koma (,)  untuk setiap harga"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/tv_beras" />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>