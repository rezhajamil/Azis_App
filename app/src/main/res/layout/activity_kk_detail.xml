        android:fontFamily="@font/montserrat"
        android:text="Medan"
        android:textColor="@color/sekunder"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/c_alamat"
        app:layout_constraintTop_toTopOf="@+id/field_alamat" />

    <TextView
        android:id="@+id/tv_anggota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/montserrat"
        android:text="4 Orang"
        android:textColor="@color/sekunder"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/c_anggota"
        app:layout_constraintTop_toTopOf="@+id/field_anggota" />

    <TextView
        android:id="@+id/tv_hub_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Kepala Keluarga"
        android:textColor="@color/sekunder"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/c_anggota"
        app:layout_constraintTop_toTopOf="@+id/textView10" />

    <TextView
        android:id="@+id/tv_kk_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Rezha"
        android:textColor="@color/sekunder"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/c_anggota"
        app:layout_constraintTop_toTopOf="@+id/textView39" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text=":"
        android:textColor="@color/sekunder"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView40"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

    <TextView
        android:id="@+id/c_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text=":"
        android:textColor="@color/sekunder"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView40"
        app:layout_constraintTop_toTopOf="@+id/field_alamat" />

    <TextView
        android:id="@+id/field_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Alamat"
        android:textColor="@color/sekunder"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
